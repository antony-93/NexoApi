{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": "./src",
        "paths": {
            "@config/*": [
                "config/*"
            ],
            "@modules/*": [
                "modules/*"
            ],
            "@shared/*": [
                "shared/*"
            ],
            "@infra/*": [
                "infra/*"
            ],
            "@utils/*": [
                "utils/*"
            ]
        }
    }
}